<div class="form-group">
<% if @product.errors.any? %>
      <% for message in @product.errors.full_messages %>
        <div class="alert alert-danger"><%= flash.now[:error] %><%= message %></div>
      <% end %>
    <% end %>
    <%= form_for @product do |f| %>
    <div class="col-md-4 col-md-offset-2">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Name', class: "form-control" %><br>
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: 'Description', class: "form-control" %><br>
      <%= f.label :stock %>
      <%= f.number_field :stock, placeholder: 'Stock', class: "form-control", :min => 0 %><br>
      <%= f.label :picture %>
      <%= f.text_field :picture_url, placeholder: 'Picture Url', class: "form-control" %><br>
      <%= f.label :categories %><br>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label class: "checkbox-inline" do %>
          <%= b.check_box + b.text.capitalize %>
          <% end %>
        <% end %>
    </div>
    <div class="col-md-4" >
      <%= f.label :price %>
      <%= f.number_field :price, placeholder: 'Price', class: "form-control", :min => 0.1, step: 0.01 %><br>
      <%= f.label :weight %>
      <%= f.number_field :weight, placeholder: 'Weight', class: "form-control", :min => 0.1, :max => 150, step: 0.01 %><br>
      <%= f.label :length %>
      <%= f.number_field :length, placeholder: 'Length', class: "form-control", :min => 0.1, :max => 108, step: 0.01 %><br>
      <%= f.label :height %>
      <%= f.number_field :height, placeholder: 'Height', class: "form-control", :min => 0.1, :max => 165, step: 0.01 %><br>
      <%= f.label :width %>
      <%= f.number_field :width, placeholder: 'Height', class: "form-control", :min => 0.1, :max => 165, step: 0.01 %><br>
      <%= f.hidden_field :robot_id, value: current_robot.id %>
    </div>
    <div class="col-md-12">
      <%= f.submit :class => 'btn btn-success btn-center'%>
    <% end %>
  </div>

</div>
